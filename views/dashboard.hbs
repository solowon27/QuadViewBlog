<!-- dashboard.hbs -->

<h1>Your Dashboard</h1>

<!-- New Blog Post Form -->
<!-- New Blog Post Form -->
<form id="newBlogForm" action="/blogs" method="POST"> <!-- Set the form action to /blogs and method to POST -->
  <h2>Create a New Blog Post</h2>
  <label for="title">Title</label>
  <input type="text" id="title" name="title" required>
  <label for="content">Content</label>
  <textarea id="content" name="content" required></textarea>
  <button type="submit">Create</button>
</form>

{{#if blogs.length}}
<ul id="blogPosts">
  {{#each blogs}}
  <li>
    <a href="/blogs/{{ id }}">{{ title }}</a>
    <button onclick="deleteBlog('{{ id }}')">Delete</button>
    <button onclick="showEditForm('{{ id }}', '{{ title }}', '{{ content }}')">Edit</button>
  </li>
  {{/each}}
</ul>
{{else}}
<p>No blog posts found.</p>
{{/if}}
